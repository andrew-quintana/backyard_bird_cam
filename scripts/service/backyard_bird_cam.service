[Unit]
Description=Backyard Bird Camera Service
After=network.target pigpiod.service

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/backyard_bird_cam
ExecStartPre=/usr/bin/sudo /usr/bin/pigpiod
ExecStart=/home/pi/backyard_bird_cam/venv/bin/python /home/pi/backyard_bird_cam/scripts/simple_pir_trigger.py --sampling_rate 0.05 --burst_quantity 5 --burst_frequency 0.3
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target 