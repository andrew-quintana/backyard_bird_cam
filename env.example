# Bird Camera Configuration
# Copy this file to .env and modify as needed

# Hardware Configuration
PIR_PIN=4
CAMERA_ROTATION=0

# Application Settings
PHOTO_DIR=data/photos
LOG_FILE=motion_events.log
COOLDOWN_TIME=5

# System Settings
PIGPIO_DAEMON_PORT=8888

# Photo Server Configuration
PHOTO_SERVER_PORT=8080
PHOTO_SERVER_HOST=127.0.0.1  # Use 0.0.0.0 to allow external connections

# Raspberry Pi Connection (for copy script)
PI_USERNAME=username
PI_HOSTNAME=raspberrypi.local
PI_PHOTOS_PATH=/home/username/bird_cam/data/photos 